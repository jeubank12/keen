{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
  },
  "exclude": [
    "webpack.**.ts",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
