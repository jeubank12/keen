{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@keen/charts": ["packages/charts"],
      "@keen/ui-core": ["packages/ui-core"],
    }
  },
  "exclude": [
    "webpack.**.ts",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
